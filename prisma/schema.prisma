generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Question {
  id              String   @id @db.ObjectId @default(auto()) @map("_id") 
  questionId      String   @unique
  questionText    String
  questionContent String
  category        String
  createdAt       DateTime @default(now())

  answers         Answer[] @relation("QuestionToAnswer")
}

model Answer {
  id        String   @id @db.ObjectId @default(auto()) @map("_id") 
  answerId  String   @unique
  answerText String
  createdAt DateTime @default(now())

  questionId String
  question   Question @relation("QuestionToAnswer", fields: [questionId], references: [questionId])
}

